@model IEnumerable<CursoEntityCore.Models.Etiqueta>
@{
    ViewData["Title"] = "Lista Etiquetas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista Etiquetas</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn btn-primary form-control">Crear Etiqueta</a>
    </div>
</div>
<div>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr>
                <th>@Html.DisplayNameFor(e => e.Etiqueta_Id)</th>
                <th>@Html.DisplayNameFor(e => e.Titulo)</th>
                <th>@Html.DisplayNameFor(e => e.Fecha)</th>
            </tr>

            @foreach (var tiqueta in Model)
            {
                <tr>
                    <td>@tiqueta.Etiqueta_Id</td>
                    <td>@tiqueta.Titulo</td>
                    <td>@tiqueta.Fecha</td>


                    <td>
                        <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id=@tiqueta.Etiqueta_Id>Editar</a>
                        <a class="btn btn-secondary text-white" asp-action="Detalle" asp-route-id=@tiqueta.Etiqueta_Id>Detalle</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id=@tiqueta.Etiqueta_Id>Borrar</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay Etiquetas</p>
    }
</div>