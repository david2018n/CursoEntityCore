@model IEnumerable<CursoEntityCore.Models.Categoria>
@{
    ViewData["Title"] = "Lista Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-4">
        <h3>Lista Categorias</h3>
    </div>
    <div class="col-3">
        <a asp-action="crear" class="btn btn-primary form-control">Crear categoria</a>
    </div>
    <div class="col-5">
        <a asp-action="CrearMultipleOpcion2" class="btn btn-primary form-control">Crear Multiple (2)</a>
        <br />
        <br />
        <a asp-action="CrearMultipleOpcion5" class="btn btn-secondary form-control">Crear Multiple (5)</a>
        <br />
        <br />
        <a asp-action="VistaCrearMultipleFormulario" class="btn btn-secondary form-control">Crear Multiples Categorias  (En form)</a>

        <br />
        <br />
        <a asp-action="BorrarMultiple2" class="btn btn-warning form-control">Borrar Multiple 2 Categorias  (En form)</a>
        <br />
        <br />
        <a asp-action="BorrarMultiple5" class="btn btn-warning form-control">Borrar Multiple 5 Categorias  (En form)</a>
        <br />
        <br />
        <a asp-action="EjecucionDiferida" class="btn btn-success form-control">Ejecucion Diferida</a>
        <br />
        <br />
        <a asp-action="TestIEnumerable" class="btn btn-secondary form-control">Ejecucion IEnumerable</a>
        <br />
        <br />
        <a asp-action="TestIQueryable" class="btn btn-success form-control">Ejecucion IQueryable</a>
        Para Actualizar usuarios y detalle usuarios:
        <br />
        <br />
        <a asp-action="TestUpdate" class="btn btn-success form-control">Test Update</a>
        <br />
        <br />
        <a asp-action="TestAttach" class="btn btn-success form-control">Test Attach</a>

        <br />
        <br />
        Vistas y Sp´s
        <a asp-action="ObtenerCategoriasVistaSql" class="btn btn-primary form-control">Obtener Categorias Vista Sql</a>
        <br />
        <br />
        <a asp-action="ConsultaFromSql" class="btn btn-primary form-control">Consulta por SQL</a>


    </div>
</div>
<div>
    @if ( Model.Count() >0){
        <table class="table table-striped border">
            <tr>
                <th>Nombre de la categoria</th>
                <th>Fecha de Creacion</th>
                <th>Estado</th>
            </tr>
            
            @foreach (var categoria in Model)
            {
                    <tr>
                        <td>@categoria.Nombre</td>
                    <td>@categoria.Activo</td>
                    <td>@categoria.FechaCreacion</td>


                        <td>
                            <a class="btn btn-primary text-white" asp-action="Editar" asp-route-id=@categoria.Categoria_Id>Editar</a>
                        <a class="btn btn-danger text-white" asp-action="Borrar" asp-route-id=@categoria.Categoria_Id>Borrar</a>
                        </td>
                    </tr>
            }
        </table>
    } else
    {
        <p>No hay Categorias</p>
    }
</div>